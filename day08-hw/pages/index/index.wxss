.area {
  background-color: #F2F1F6;
}
.area .date {
  margin-top: 10px;
  margin-bottom: 5px;
  color: #B0B0B1;
  margin-left: 20px;
}
.area .item-son-area {
  background-color: #FFFFFF;
  margin-bottom: 10px;
  margin-left: 20px;
  margin-right: 20px;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  /* 允许子元素换行 */
  justify-content: space-between;
  /* 子元素均匀分布 */
}
.area .item-son-area .item {
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 10rpx;
  width: 100px;
  height: 70px;
}
.area .item-son-area .item .title,
.area .item-son-area .item .value {
  justify-content: center;
  display: flex;
  align-content: center;
  margin-top: 20rpx;
}
.area .item-son-area .item .vt {
  color: #808080;
}
